<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <GeneratePackageBuild>false</GeneratePackageBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Version>0.0.3</Version>
    <PackageReleaseNotes>Метод GetWeatherTimeMachine. 
Исторические данные о погоде за предыдущие 5 дней
</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <Company>Amber-Castle</Company>
    <Product>OpenWeatherApi</Product>
    <Authors>rd3bax@gmail.com</Authors>
    <Description>Клиент для OpenWeatherMap.org</Description>
    <Copyright>rd3bax@gmail.com</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/RD3BAX/OpenWeather</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RD3BAX/OpenWeather</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <SignAssembly>true</SignAssembly>
    <PackageTags>Weather, OpenWeatherMap, WebAPI</PackageTags>
    <AssemblyOriginatorKeyFile>AmberCastle.OpenWeather.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
  </ItemGroup>

</Project>
